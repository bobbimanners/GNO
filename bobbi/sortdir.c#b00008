#pragma debug 9
#pragma lint -1
#pragma stacksize 16384
#pragma memorymodel 0
#pragma optimize -1      /* Disable stack repair code */

#include <stdio.h>
#include <ctype.h>
#include <string.h>
#include <stdlib.h>
#include <stdarg.h>
